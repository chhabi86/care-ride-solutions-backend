# Example environment variables for Care Ride backend
# Copy to /opt/backend/app.env and fill real values.

# Database (PostgreSQL)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/caredb
SPRING_DATASOURCE_USERNAME=careuser
SPRING_DATASOURCE_PASSWORD=supersecret

# Mail (AWS WorkMail)
MAIL_HOST=smtp.mail.us-east-1.awsapps.com
MAIL_PORT=465
MAIL_USERNAME=info@careridesolutionspa.com
MAIL_PASSWORD=change-me
MAIL_SSL_ENABLE=true
MAIL_SSL_SOCKET_FACTORY_CLASS=javax.net.ssl.SSLSocketFactory
MAIL_SSL_SOCKET_FACTORY_PORT=465
MAIL_DEBUG=false

# JWT
JWT_SECRET=please_change_me
